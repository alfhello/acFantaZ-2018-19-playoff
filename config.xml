<?xml version="1.0" encoding="UTF-8" ?>
<widget xmlns="http://www.w3.org/ns/widgets" xmlns:gap="http://phonegap.com/ns/1.0" id="com.ascdevelop.ascfanta" versionCode="100" version="1.0.0">

<name>ascFantA ver 1.18.3</name>
<description>
Fantasy Basketball - ACP
</description>
<author email="asc.develop@gmail.com" href="http://ascdevelop.com">
	ASC Development
</author>

<content src="index.html" />
<access origin="*" />

<platform name="ios">
    <edit-config target="NSCameraUsageDescription" file="*-Info.plist" mode="merge">
        <string>to take pictures/scan barcodes</string>
    </edit-config>
    <edit-config target="NSPhotoLibraryUsageDescription" file="*-Info.plist" mode="merge">
        <string>to get pictures</string>
    </edit-config>
</platform>

<platform name="android">
	<preference name="android-targetSdkVersion" value="26" />
	<plugin name="cordova-android-support-gradle-release" source="npm">
		<variable name="ANDROID_SUPPORT_VERSION" value="28.0.0"/>
	</plugin>
</platform>

<platform name="windows">
	<preference name="windows-appx-target" value="uap" />
	<preference name="windows-target-version" value="10.0" />
	<preference name="windows-arch" value="x64" />
	<preference name="WindowsDefaultUriPrefix" value="ms-appx-web://" />
	<preference name="WindowsToastCapable" value="true" />
</platform>

<preference name="phonegap-version" value="cli-8.1.1" />
<preference name="StatusBarOverlaysWebView" value="false" />
<preference name="fullscreen" value="false" />
<preference name="LoadUrlTimeoutValue" value="70000" />
<preference name="AutoHideSplashScreen" value="false" />
<preference name="ShowSplashScreenSpinner" value="false"/>
<preference name="FadeSplashScreen" value="false"/>
<preference name="SplashShowOnlyFirstTime" value="false" />
<preference name="SplashMaintainAspectRatio" value="true" />
<preference name="DisallowOverscroll" value="true"/>
<preference name="SuppressesLongPressGesture" value="true" />
<preference value="none" name="permissions"/>

